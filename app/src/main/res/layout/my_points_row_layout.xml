<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/orderNoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_no"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/orderNo"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/orderNoTxt"
            android:layout_toEndOf="@+id/orderNoTxt"
            android:text="13079620934157743"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:text="13/07/2018" />

        <TextView
            android:id="@+id/amountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/orderNo"
            android:layout_marginTop="5dp"
            android:text="@string/amounts" />

        <TextView
            android:id="@+id/amount"
            android:layout_toRightOf="@+id/amountTxt"
            android:layout_toEndOf="@+id/amountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_below="@+id/orderNo"
            android:layout_marginTop="5dp"
            android:text="$68.26" />

        <TextView
            android:id="@+id/pointstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountTxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginTop="5dp"
            android:text="@string/points" />
        <TextView
            android:layout_toRightOf="@+id/pointstxt"
            android:layout_toEndOf="@+id/pointstxt"
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountTxt"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginTop="5dp"
            android:text=" - " />

        <TextView
            android:visibility="gone"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/points"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-5dp"
            android:background="@drawable/corner_border_status_my_point"
            android:text="Points pending"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/redeemPointtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/points"
            android:text="@string/redeem_points" />
        <TextView
            android:layout_toRightOf="@+id/redeemPointtxt"
            android:layout_toEndOf="@+id/redeemPointtxt"
            android:id="@+id/redeemPoints"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_marginTop="5dp"
            android:text=" - " />
    </RelativeLayout>
</RelativeLayout>