<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_main_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:src="@drawable/placeholder_land"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/deal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deal_text"
        android:gravity="center"
        android:padding="10dp"
        android:text="text"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/deal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deal_level"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="Food Festival : uiwbhouifv unowcouiewfcn2w"/>

    <TextView
        android:id="@+id/deal_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text="Food Festival 2017"
        android:background="@drawable/dialog_crazy_btn_background"
        android:textColor="#FFF"
        android:textSize="18sp" />

</RelativeLayout>
